<div id="package_list" >
<h1>Listing Packages</h1>
<table>
  <% @packages.each do |package| %>
    <tr class=" <%= cycle('list_line_odd' , 'list_line_even' ) %>" >
      <td><%= image_tag(package.image_url, :class => 'list_image' ) %></td>
      <td class="list_description" >
      <dl>
        <dt><%= package.title %></dt>
        <dd><%= truncate(strip_tags(package.description), :length => 80) %></dd>
      </dl>
      </td>
      <td class="list_actions" >
        <%= link_to 'Show' , package %><br/>
        <%= link_to 'Edit' , edit_package_path(package) %><br/>
        <%= link_to 'Destroy' , package, :confirm => 'Are you sure?' , :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
</div>

<br>

<%= link_to 'New Package', new_package_path %>
